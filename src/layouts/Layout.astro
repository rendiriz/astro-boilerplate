---
import BaseHead from '@/layouts/BaseHead.astro';
import Nav from '@/islands/Nav';

const { ...customMeta } = Astro.props;
const meta = { ...customMeta };

const pathname = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead meta={meta} />
  </head>
  <body>
    <Nav client:load pathname={pathname} />
    <main>
      <slot />
    </main>
    <footer class="mx-auto max-w-7xl px-4">
      <div class="text-gray-800 dark:text-gray-50">Footer</div>
    </footer>
    <style>
      body {
        @apply bg-white dark:bg-gray-900;
      }
    </style>

    <script is:inline src="/theme.js"></script>
  </body>
</html>
